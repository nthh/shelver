{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noImplicitOverride": true,
    "outDir": "./build",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["src/**/*.ts"]
}
